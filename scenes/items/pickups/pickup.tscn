[sub_resource type="Shader" id="Shader_a5use"]
code = "shader_type canvas_item;

uniform int rarity : hint_range(0, 4) = 0; // 0=COMMON, 1=UNCOMMON, 2=RARE, 3=EPIC, 4=LEGENDARY
uniform float intensity : hint_range(0.0, 2.0) = 1.0; // Controls the intensity of the color effect
uniform float border_width : hint_range(0.0, 10.0) = 2.0; // Controls the width of the border

void vertex() {
	// Called for every vertex the material is visible on.
}

void fragment() {
	// Get the original color
	vec4 original_color = texture(TEXTURE, UV);
	
	// Define rarity colors (you can adjust these to match your game's theme)
	vec3 rarity_colors[5];
	rarity_colors[0] = vec3(0.7, 0.7, 0.7); // COMMON - Gray
	rarity_colors[1] = vec3(0.2, 0.8, 0.2); // UNCOMMON - Green
	rarity_colors[2] = vec3(0.2, 0.2, 0.8); // RARE - Blue
	rarity_colors[3] = vec3(0.8, 0.2, 0.8); // EPIC - Purple
	rarity_colors[4] = vec3(1.0, 0.8, 0.0); // LEGENDARY - Gold
	
	// Get the color for the current rarity
	vec3 rarity_color = rarity_colors[rarity];
	
	// Calculate pixel size for border sampling
	vec2 pixel_size = 1.0 / TEXTURE_PIXEL_SIZE;
	vec2 border_offset = border_width / pixel_size;
	
	// Check if current pixel is transparent
	bool is_transparent = original_color.a < 0.1;
	
	// If transparent, check if any nearby pixel has content (this creates the border)
	float border_alpha = 0.0;
	if (is_transparent) {
		// Check in a small radius around this pixel
		for (float x = -1.0; x <= 1.0; x += 1.0) {
			for (float y = -1.0; y <= 1.0; y += 1.0) {
				vec2 sample_uv = UV + vec2(x, y) * border_offset;
				vec4 sample_color = texture(TEXTURE, sample_uv);
				
				if (sample_color.a > 0.1) {
					border_alpha = 1.0;
					break;
				}
			}
			if (border_alpha > 0.0) break;
		}
	}
	
	// Blend the original color with the rarity color for non-border areas
	vec3 final_color = mix(original_color.rgb, rarity_color, intensity * 0.5);
	
	// If this is a border pixel, use the rarity color
	if (border_alpha > 0.0) {
		final_color = rarity_color;
		original_color.a = 1.0; // Make border fully opaque
	}
	
	// Apply the final color
	COLOR = vec4(final_color, original_color.a);
}

